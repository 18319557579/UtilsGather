<resources>
    <declare-styleable name="TouchPullView">
        <attr name="pColor" format="color"/><!--拉动地颜色-->
        <attr name="pRadius" format="dimension"/><!--拉动的半径-->
        <attr name="pDragHeight" format="dimension"/><!--拉动的高度-->
        <attr name="pTangentAngle" format="integer"/><!--拉动的控制点角度-->
        <attr name="pTargetWidth" format="dimension"/><!--整体宽度-->
        <attr name="pTargetGravityHeight" format="dimension"/><!--重心高度，即控制点高度-->
        <attr name="pContentDrawable" format="reference"/><!--中间drawable-->
        <attr name="pContentDrawableMargin" format="dimension"/><!--中间Drawable 的外边距-->
    </declare-styleable>
</resources>