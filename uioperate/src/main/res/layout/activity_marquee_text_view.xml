<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_marquee_textview.MarqueeTextViewActivity">
    
    <com.example.uioperate.custom_marquee_textview.MarqueeTextView
        android:id="@+id/mtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 实现文本横向滚动，跑马灯效果。123..."

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="#60CACACA"/>

    <com.example.uioperate.custom_marquee_textview.MarqueeTextViewTwo
        android:id="@+id/mtv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 实现文本横向滚动，跑马灯效果。123...6666"

        app:layout_constraintTop_toBottomOf="@id/mtv"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_marginTop="20dp"

        android:textColor="@color/blue_middle"
        android:textSize="20sp"
        android:background="#60CACACA"/>

    <com.example.uioperate.custom_marquee_textview.MarqueeTextViewThree
        android:id="@+id/mtv_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 实现文本gjqy横向滚动，跑马灯效果。123...33333"

        app:layout_constraintTop_toBottomOf="@id/mtv_two"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="100dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="20dp"

        android:textColor="#E91E63"
        android:textSize="20sp"
        android:background="#60CACACA"/>

    <com.example.uioperate.custom_marquee_textview.MarqueeTextViewThree
        android:id="@+id/mtv_three2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin 实现文本gjqy横向滚动，跑马灯效果。123...33333"

        app:layout_constraintTop_toBottomOf="@id/mtv_three"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"

        android:textColor="#E91E63"
        android:textSize="20sp"
        android:background="#60CACACA"/>

    <Button
        android:id="@+id/btn_set_new_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置新内容"
        app:layout_constraintTop_toBottomOf="@id/mtv_three2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>