<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.uioperate.custom_juejin_s10g.ApertureView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ccc"/>

        <com.example.uioperate.custom_juejin_s10g.ApertureViewGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ccc"
            app:aperture_border_width="50dp"
            app:aperture_border_angle="30dp"
            app:aperture_color1="@android:color/holo_orange_dark"
            app:aperture_color2="@android:color/holo_blue_light"
            app:aperture_duration="1000"

            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@mipmap/emoji_2"/>

        </com.example.uioperate.custom_juejin_s10g.ApertureViewGroup>

        <!--发现非正方形会出现很差的效果-->
        <com.example.uioperate.custom_juejin_s10g.ApertureViewGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:aperture_border_width="10dp"
            app:aperture_border_angle="0dp"
            app:aperture_duration="2000"

            android:layout_marginTop="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轩然霞举空洞无物敲锣放砲养家糊口林下风致一字千秋神魂失据青史留名日夜警戒鲽离鹣背怀乡之情忘形之契俗易风移全功尽弃年老龙钟清曹竣府众人国士蚕丛鸟道生物卫星地方自治乘云行泥善以为宝多谋善断不是话头师范学校飞流短长衣紫腰金断墨残楮轰轰烈烈道而不径抽检禄马向平之愿一反既往知人则哲死去活来勺状软骨冲言冲语娇小玲珑以螳挡车发扬光大食为民天去梯之言可操左券扛大个儿矫言伪行知音识趣桃腮杏脸剔肤见骨" />

        </com.example.uioperate.custom_juejin_s10g.ApertureViewGroup>

        <!--只要aperture_border_angle足够大，可以将圆角矩形变成圆-->
        <com.example.uioperate.custom_juejin_s10g.ApertureViewGroup
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#ffffffff"
            app:aperture_border_width="10dp"
            app:aperture_border_angle="900dp"
            app:aperture_color2="@android:color/holo_blue_light"
            app:aperture_duration="1000"

            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按钮1" />

        </com.example.uioperate.custom_juejin_s10g.ApertureViewGroup>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>