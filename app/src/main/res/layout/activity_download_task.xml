<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".file.list.database.DownloadTaskActivity"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载记账"
                android:onClick="downloadJiZhang"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载抖音"
                android:onClick="downloadDouYin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载微信"
                android:onClick="downloadWeiXin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载小红书"
                android:onClick="downloadXiaoHongShu"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载皮皮虾"
                android:onClick="downloadPiPiXia"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打印当前的Bean + 数据库"
                android:onClick="showInfo"/>


        </LinearLayout>
    </HorizontalScrollView>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_download_task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>